// Comprehensive operator test suite
// Tests all arithmetic, comparison, and logical operators
// Part of Phase 1 Week 2 test coverage

fn test_arithmetic_operators() -> i32 {
    // Integer arithmetic
    let a: i32 = 10 + 5;        // Addition: 15
    let b: i32 = 10 - 5;        // Subtraction: 5
    let c: i32 = 10 * 5;        // Multiplication: 50
    let d: i32 = 10 / 5;        // Division: 2
    let e: i32 = 10 % 3;        // Modulo: 1
    
    // Float arithmetic
    let fa: f64 = 10.0 + 5.0;   // Addition: 15.0
    let fb: f64 = 10.0 - 5.0;   // Subtraction: 5.0
    let fc: f64 = 10.0 * 5.0;   // Multiplication: 50.0
    let fd: f64 = 10.0 / 5.0;   // Division: 2.0
    
    a + b + c + d + e
}

fn test_comparison_operators() -> bool {
    // Integer comparisons
    let lt: bool = 5 < 10;      // Less than: true
    let le: bool = 5 <= 5;      // Less or equal: true
    let gt: bool = 10 > 5;      // Greater than: true
    let ge: bool = 5 >= 5;      // Greater or equal: true
    let eq: bool = 5 == 5;      // Equal: true
    let ne: bool = 5 != 10;     // Not equal: true
    
    // Float comparisons (tests fixed bug from Week 1)
    let flt: bool = 1.5 < 2.5;  // Float less than: true
    let fle: bool = 1.5 <= 2.5; // Float less or equal: true
    let fgt: bool = 2.5 > 1.5;  // Float greater than: true
    let fge: bool = 2.5 >= 1.5; // Float greater or equal: true
    let feq: bool = 1.5 == 1.5; // Float equal: true
    let fne: bool = 1.5 != 2.5; // Float not equal: true
    
    lt && le && gt && ge && eq && ne && flt && fle && fgt && fge && feq && fne
}

fn test_logical_operators() -> bool {
    // Logical AND
    let and1: bool = true && true;   // true
    let and2: bool = true && false;  // false
    let and3: bool = false && true;  // false
    let and4: bool = false && false; // false
    
    // Logical OR
    let or1: bool = true || true;    // true
    let or2: bool = true || false;   // true
    let or3: bool = false || true;   // true
    let or4: bool = false || false;  // false
    
    // Logical NOT
    let not1: bool = !true;          // false
    let not2: bool = !false;         // true
    
    and1 && !and2 && !and3 && !and4 && or1 && or2 && or3 && !or4 && !not1 && not2
}

fn test_operator_precedence() -> i32 {
    // Test precedence: * before +
    let a: i32 = 2 + 3 * 4;     // Should be 14, not 20
    
    // Test precedence: / before -
    let b: i32 = 10 - 6 / 2;    // Should be 7, not 2
    
    a + b  // Returns 21
}

fn main() -> i32 {
    test_arithmetic_operators();
    test_comparison_operators();
    test_logical_operators();
    test_operator_precedence()
}
